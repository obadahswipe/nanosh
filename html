    <script>
        // Hide loader after page loads
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('loader').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loader').style.display = 'none';
                }, 1000);
            }, 2000);
        });

        // Typewriter effect
        const messages = [
            "Naya, you are my everything üíï",
            "Distance means nothing when you mean everything üíñ",
            "I can't wait to hold you again this summer ‚òÄÔ∏è",
            "You changed my whole world, Nanosh üíó",
            "Every second without you feels like forever üíù",
            "You're the reason I smile every day üòä",
            "My heart belongs to you forever üíò"
        ];

        let messageIndex = 0;
        let charIndex = 0;
        let currentMessage = '';
        let isDeleting = false;

        function typeWriter() {
            const typewriterElement = document.getElementById('typewriter');
            
            if (!isDeleting && charIndex < messages[messageIndex].length) {
                currentMessage += messages[messageIndex].charAt(charIndex);
                charIndex++;
            } else if (isDeleting && charIndex > 0) {
                currentMessage = currentMessage.substring(0, currentMessage.length - 1);
                charIndex--;
            } else if (!isDeleting && charIndex === messages[messageIndex].length) {
                isDeleting = true;
                setTimeout(typeWriter, 2000);
                return;
            } else if (isDeleting && charIndex === 0) {
                isDeleting = false;
                messageIndex = (messageIndex + 1) % messages.length;
            }
            
            typewriterElement.innerHTML = currentMessage;
            const speed = isDeleting ? 50 : 100;
            setTimeout(typeWriter, speed);
        }

        setTimeout(typeWriter, 3000);

        // Countdown Timer (Set to June 1st, 2025 for summer)
        function updateCountdown() {
            const summerDate = new Date('2025-06-01T00:00:00').getTime();
            const now = new Date().getTime();
            const distance = summerDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('days').innerText = days.toString().padStart(2, '0');
            document.getElementById('hours').innerText = hours.toString().padStart(2, '0');
            document.getElementById('minutes').innerText = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').innerText = seconds.toString().padStart(2, '0');

            if (distance < 0) {
                document.getElementById('countdown').innerHTML = "<h2>WE'RE FINALLY TOGETHER! üéâüíïüéä</h2>";
            }
        }

        setInterval(updateCountdown, 1000);
        updateCountdown();

        // Smooth scroll
        function scrollToNext() {
            document.getElementById('countdown-section').scrollIntoView({ behavior: 'smooth' });
        }

        // Love message popup
        const loveMessages = [
            "Naya, I love you to infinity! üíï",
            "You're my everything, Nanosh! üíñ",
            "Can't wait for summer! ‚òÄÔ∏è",
            "Missing your smile right now! üòä",
            "You make my heart complete! üíó",
            "Forever isn't long enough with you! üíò",
            "You're my soulmate! üíù",
            "Thinking of you always! üí≠",
            "You're perfect, my Naya! ‚ú®"
        ];

        function showLoveMessage() {
            const message = loveMessages[Math.floor(Math.random() * loveMessages.length)];
            // Create a beautiful popup instead of alert
            const popup = document.createElement('div');
            popup.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(135deg, #ff6b9d, #ff9ff3);
                color: white;
                padding: 30px;
                border-radius: 20px;
                font-size: 1.5em;
                z-index: 10000;
                box-shadow: 0 20px 60px rgba(0,0,0,0.3);
                animation: popIn 0.5s ease;
                text-align: center;
            `;
            popup.innerHTML = message;
            document.body.appendChild(popup);
            
            setTimeout(() => {
                popup.style.animation = 'fadeOut 0.5s ease';
                setTimeout(() => popup.remove(), 500);
            }, 2000);
        }

        // Add animation styles
        const style = document.createElement('style');
        style.textContent = `
            @keyframes popIn {
                0% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
                100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
            }
            @keyframes fadeOut {
                to { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
            }
        `;
        document.head.appendChild(style);

        // Animate memory cards
        function animateCard(card) {
            card.style.animation = 'bounce 0.5s ease';
            setTimeout(() => {
                card.style.animation = '';
            }, 500);
            
            // Add more hearts when clicked
            for(let i = 0; i < 5; i++) {
                setTimeout(() => createHeart(card), i * 100);
            }
        }

        function createHeart(element) {
            const heart = document.createElement('span');
            heart.innerHTML = 'üíï';
            heart.style.cssText = `
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 30px;
                pointer-events: none;
                animation: floatAway 1s ease forwards;
                z-index: 1000;
            `;
            element.appendChild(heart);
            setTimeout(() => heart.remove(), 1000);
        }

        // Add float away animation
        const floatStyle = document.createElement('style');
        floatStyle.textContent = `
            @keyframes floatAway {
                to {
                    transform: translate(-50%, -200%) scale(0);
                    opacity: 0;
                }
            }
            @keyframes bounce {
                0%, 100% { transform: scale(1); }
                50% { transform: scale(1.1); }
            }
        `;
        document.head.appendChild(floatStyle);

        // Song list functionality
        let songs = [];
        
        function addSong() {
            const input = document.getElementById('songInput');
            const songName = input.value.trim();
            
            if (songName) {
                songs.push(songName);
                updateSongsList();
                input.value = '';
                
                // Save to localStorage
                localStorage.setItem('ourSongs', JSON.stringify(songs));
                
                // Show success message
                showLoveMessage();
            }
        }

        function updateSongsList() {
            const songsList = document.getElementById('songsList');
            if (songs.length > 0) {
                songsList.innerHTML = songs.map(song => 
                    `<div class="song-item">${song}</div>`
                ).join('');
            }
        }

        // Load saved songs
        window.addEventListener('load', function() {
            const savedSongs = localStorage.getItem('ourSongs');
            if (savedSongs) {
                songs = JSON.parse(savedSongs);
                updateSongsList();
            }
        });

        // Allow Enter key to add song
        document.getElementById('songInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                addSong();
            }
        });

        // Add sparkles on mouse move (romantic effect)
        let lastSparkle = 0;
        document.addEventListener('mousemove', (e) => {
            const now = Date.now();
            if (now - lastSparkle > 100) {
                if (Math.random() > 0.9) {
                    const sparkle = document.createElement('div');
                    sparkle.innerHTML = '‚ú®';
                    sparkle.className = 'sparkle';
                    sparkle.style.left = e.clientX + 'px';
                    sparkle.style.top = e.clientY + 'px';
                    sparkle.style.fontSize = Math.random() * 20 + 10 + 'px';
                    document.body.appendChild(sparkle);
                    setTimeout(() => sparkle.remove(), 1000);
                    lastSparkle = now;
                }
            }
        });

        // Create floating hearts periodically
        setInterval(() => {
            const heart = document.createElement('div');
            heart.innerHTML = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíù'][Math.floor(Math.random() * 5)];
            heart.className = 'heart-bg';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.fontSize = Math.random() * 20 + 20 + 'px';
            heart.style.animationDuration = Math.random() * 5 + 10 + 's';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 15000);
        }, 3000);
    </script>
</body>
</html>
